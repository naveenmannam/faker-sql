<%- include partials/header.ejs %>
<body>
  <div class="container">
    <div class="col-md-8 offset-md-2 mt-4">
      <div class="text-center">
        <h1 class="display-1">JOIN ME</h1>
        <h3 class="display-4">
          There are <%= count %> users currently registered
        </h3>
      </div>
      <div class="text-center mt-4 col-md-6 offset-md-3">
        <form method="POST" action="/person">
          <div class="form-group">
            <input
              type="text"
              name="email"
              id="email"
              class="form-control"
              placeholder="Enter your Email"
              autofocus
              required
            />
          </div>
          <button type="submit" class="btn btn-lg btn-primary">JOIN US</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include partials/footer.ejs %>
